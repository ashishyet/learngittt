import 'package:flutter/material.dart';

void main() {
  runApp(MyApp());
}

class MyApp extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      home: Scaffold(
        appBar: AppBar(title: Text('Simple Image Widget')),
        body: Center(
          child: Image.network('https://via.placeholder.com/150'),  // Display image from network
        ),
      ),
    );
  }
}
