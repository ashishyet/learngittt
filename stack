void main() {
  runApp(MyApp());
}

class MyApp extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      home: Scaffold(
        appBar: AppBar(title: Text('Simple Stack Layout')),
        body: Center(
          child: Stack(
            children: <Widget>[
              // Bottom widget (red box)
              Container(
                width: 200,
                height: 200,
                color: Colors.red,
              ),
              // Positioned widget (green box on top)
              Positioned(
                top: 50,
                left: 50,
                child: Container(
                  width: 150,
                  height: 150,
                  color: Colors.green,
                ),
              ),
              // Positioned widget (blue box on top)
              Positioned(
                top: 100,
                left: 100,
                child: Container(
                  width: 100,
                  height: 100,
                  color: Colors.blue,
                ),
              ),
            ],
          ),
        ),
      ),
    );
  }
}
